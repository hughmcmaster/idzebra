BEGIN				{ begin record wais }
/^From:/	BODY	/$/	{ data -element name $1 }
/^Subject:/	BODY	/$/	{ data -element title $1 }
/^Date:/	BODY	/$/	{ data -element dateOfLastModification $1 }
/^$/		BODY	/^From /	{
						data -text -element Body $1
				  		unread 2
                                  		end record
                                	}
